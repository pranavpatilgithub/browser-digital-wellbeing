{
    "manifest_version": 3,
    "name": "Website Time Tracker Draft 1",
    "version": "1.0",
    "description": "Track time spent on different websites daily",
    "permissions": [
        "storage",
        "tabs",
        "activeTab"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png"
        
    }
}
